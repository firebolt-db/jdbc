<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{60} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.hc" level="error"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>